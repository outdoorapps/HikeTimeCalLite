<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/app_name"
            android:layout_below="@+id/app_name"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/version"
            android:layout_below="@+id/version"
            android:text="@string/developer"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/developer"
            android:layout_below="@+id/developer"
            android:text="@string/privacy_policy"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/third_party_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/privacy_policy"
            android:layout_below="@+id/privacy_policy"
            android:layout_marginTop="25dp"
            android:text="@string/third_party_api"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/google_maps_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/third_party_api"
            android:layout_below="@+id/third_party_api"
            android:text="@string/google_maps_android" />

        <TextView
            android:id="@+id/google_elevation_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/google_maps_android"
            android:paddingTop="5dp"
            android:text="@string/google_elevation_api" />

        <TextView
            android:id="@+id/usgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/google_elevation_api"
            android:paddingTop="5dp"
            android:text="@string/usgs" />

        <TextView
            android:id="@+id/graphview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/usgs"
            android:paddingTop="5dp"
            android:text="@string/graphview" />
    </RelativeLayout>

</ScrollView>
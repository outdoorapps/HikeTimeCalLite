<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TrackDetailsActivity" >

    <!--
     Layout
	 Track name		<Track name>
	 Date			<Date>
	 Start Time		<Start Time>
	 End Time		<End Time>
	 Duration		<Duration>
	 Distance		<Distance><Distance Unit>
	 Average Speed	<Average Speed>
	 Max Elevation	<Max Elevation><Elevation Unit>
	 Min Elevation	<Min Elevation><Elevation Unit>
	 Elevation Gain	<Elevation Gain><Elevation Unit>
	 Elevation Loss	<Elevation Loss><Elevation Unit>
	 <Elevation Profile>
	 <Speed Profile>
	 <Accuracy Profile>
    -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="?android:attr/actionBarSize" >

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/track_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/track_name"
            android:text="@string/date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/track_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/date"
            android:text="@string/start_time"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/start_time"
            android:text="@string/end_time"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/start_time"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/end_time"
            android:text="@string/duration"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/end_time"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/duration"
            android:text="@string/distance"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_distance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/duration"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:layout_toLeftOf="@id/this_distance_unit"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/avg_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/distance"
            android:text="@string/avg_speed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_avg_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/distance"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_avg_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/distance"
            android:layout_toLeftOf="@id/this_avg_speed_unit"
            android:textSize="18sp" />
        
         <TextView
            android:id="@+id/max_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/avg_speed"
            android:text="@string/max_elevation"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_max_elevation_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/avg_speed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_max_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avg_speed"
            android:layout_toLeftOf="@id/this_max_elevation_unit"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/min_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/max_elevation"
            android:text="@string/min_elevation"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_min_elevation_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/max_elevation"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_min_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/max_elevation"
            android:layout_toLeftOf="@id/this_min_elevation_unit"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/elevation_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/min_elevation"
            android:text="@string/elevation_gain"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_elevation_gain_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/min_elevation"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_elevation_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/min_elevation"
            android:layout_toLeftOf="@id/this_elevation_gain_unit"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/elevation_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/elevation_gain"
            android:text="@string/elevation_loss"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_elevation_loss_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/elevation_gain"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/this_elevation_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/elevation_gain"
            android:layout_toLeftOf="@id/this_elevation_loss_unit"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/elevation_profile_layout"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@id/elevation_loss"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/elevation_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/speed_profile_layout"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@id/elevation_profile_layout"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/speed_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/accuracy_profile_layout"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@id/speed_profile_layout"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/accuracy_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/action_bar_theme</item>
    </style>

    <!--
    Activity uses this theme should use
    SplitActionBarStyle.setSplitActionBarOverlayColor(actionBar);
    -->
    <style name="action_bar_theme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#aa000000</item>
    </style>

</resources>